<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@id/row_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xenon_vector" />

    <TextView
        android:id="@id/row_line_1"
        style="@style/row_two_line_1st_line"
        android:layout_marginStart="16dp"
        android:text="@string/product_name_xenon"
        app:layout_constraintBottom_toTopOf="@id/row_line_2"
        app:layout_constraintStart_toEndOf="@id/row_image" />

    <TextView
        android:id="@id/row_line_2"
        style="@style/row_two_line_2nd_line"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:text="This is a description!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/row_image" />


</android.support.constraint.ConstraintLayout>