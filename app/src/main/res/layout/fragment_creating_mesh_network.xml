<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.particle.mesh.setup.ui.CreatingMeshNetworkFragment"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/setup_header_text"
        style="@style/p_setup_header_text"
        android:text="@string/p_creatingyournetwork_header"
        app:layout_constraintBottom_toTopOf="@+id/progressBar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/status_stage_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setup_header_text" />

    <TextView
        android:id="@+id/status_stage_1"
        style="@style/setup_step_text"
        android:text="@string/p_creatingyournetwork_step_1"
        app:layout_constraintBottom_toTopOf="@+id/status_stage_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar4" />

    <TextView
        android:id="@+id/status_stage_2"
        style="@style/setup_step_text"
        android:layout_height="22dp"
        android:text="@string/p_creatingyournetwork_step_2"
        app:layout_constraintBottom_toTopOf="@+id/status_stage_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_stage_1" />

    <TextView
        android:id="@+id/status_stage_3"
        style="@style/setup_step_text"
        android:text="@string/p_creatingyournetwork_step_3"
        app:layout_constraintBottom_toTopOf="@+id/status_stage_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_stage_2" />

    <TextView
        android:id="@+id/status_stage_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p_creatingyournetwork_step_4"
        app:layout_constraintBottom_toTopOf="@+id/status_stage_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_stage_3" />

    <TextView
        android:id="@+id/status_stage_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p_creatingyournetwork_step_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_stage_4" />

</android.support.constraint.ConstraintLayout>
