<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="p_mesh_hintbox_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="p_mesh_edittextoutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="boxStrokeColor">@color/p_mesh_element_border</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/p_mesh_hintbox_header_grey</item>
    </style>

</resources>