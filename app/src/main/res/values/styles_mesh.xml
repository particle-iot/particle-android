<resources>

    <!-- Base application theme. -->
    <style name="p_MeshTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/p_ParticleText</item>
    </style>

    <style name="p_ParticleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/p_text_color_primary</item>
    </style>

    <style name="p_setup_header_text">
        <item name="android:textSize">@dimen/p_setup_header_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="p_setup_step_text">
        <item name="android:textSize">@dimen/p_setup_step_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="row_two_line_1st_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- FIXME: this has ugly side effects -->
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Light.SearchResult.Subtitle
        </item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="row_two_line_2nd_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="setup_step_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="setup_fine_print">
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="fine_print">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="fine_print_linkified" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="wide_button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:minWidth">250dp</item>
    </style>

</resources>
